<?xml version="1.0"?>
<launch>
    <!-- config file path  -->
    <arg name="rviz_settings" default="$(find second_challenge_toshiki)/config/rviz/chibi22_b.rviz"/>

    <!-- yaml file path  -->
    <arg name="obstacle_scanner_settings" default="$(find second_challenge_toshiki)/config/param/obstacle_scanner.yaml"/>
    <arg name="local_map_creator_settings" default="$(find second_challenge_toshiki)/config/param/local_map_creator.yaml"/>

    <!-- node launch -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rviz_settings)"/>
    <node pkg="second_challenge_toshiki" type="obstacle_scanner2" name="obstacle_scanner2" output="screen">
        <rosparam command="load" file="$(arg obstacle_scanner_settings)"/>
    </node>
    <node pkg="second_challenge_toshiki" type="local_map_creator2" name="local_map_creator2" output="screen">
        <rosparam command="load" file="$(arg local_map_creator_settings)"/>
    </node>
</launch>
